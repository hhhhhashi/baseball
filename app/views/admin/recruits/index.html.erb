<h1><%= @member.last_name + @member.first_name %>の募集要項一覧</h1>

<div class="container">
  <div class="row">
    <% @recruits.each do |recruit| %>
      <div class="col-lg-6">
        <div class="mr-auto">
          <div>
            <%= image_tag recruit.get_image %>
          </div>

          <div>
            <p>タイトル</p>
            <%= link_to admin_recruit_path(recruit) do %>
            <%= recruit.title %>
            <% end %>
          </div>

          <div>
            <p>チーム名</p>
            <%= recruit.team %>
          </div>

          <div>
            <p>主な活動エリア</p>
            <%= recruit.area_i18n %>
          </div>

          <div>
            <p>場所</p>
            <%= recruit.place %>
          </div>

          <div>
            <p>日時</p>
            <%= recruit.day_and_time %>
          </div>


          <div>
            <p><%= link_to "#{recruit.post_comments.count} コメント", admin_recruit_path(recruit.id) %></p>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>

