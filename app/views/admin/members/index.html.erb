<h1>会員一覧画面</h1>

<% @members.each do |member| %>

  <%= image_tag member.get_profile_image %>

  <p>会員ID</p>
  <%= member.id %>

  <p>会員名</p>
  <%= link_to admin_member_path(member) do %>
  <%= member.last_name + member.first_name %>
  <% end %>

  <p>メールアドレス</p>
  <%= member.email %>

  <p>電話番号</p>
  <%= member.telephone_number %>

  <p>退会ステータス</p>
    <% if member.is_deleted == false %>
      <p class="text-success">有効</p>
    <% else member.is_deleted == true %>
      <p class="text-secondary">退会</p>
    <% end %>

  <%= link_to admin_member_recruits_path(member) do %>
  <p><%= member.last_name + member.first_name %>の助っ人募集要項一覧</p>
  <% end %>

<% end %>
