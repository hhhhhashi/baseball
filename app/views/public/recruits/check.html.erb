<h1>募集要項登録確認画面</h1>

<p>画像</p>
<%= image_tag @recruit.get_image %>

<P>タイトル</P>
<%= @recruit.title %>

<p>チーム名</p>
<%= @recruit.team %>

<p>主な活動エリア</p>
<%= @recruit.area_i18n %>

<p>場所</p>
<%= @recruit.place %>

<p>募集日時</p>
<%= @recruit.day_and_time %>

<p>チームレベル(1~10段階)</p>
<%= @recruit.team_level %>

<p>本文</p>
<%= @recruit.content %>

<p>代表者番号</p>
<%= @member.telephone_number %>

<p>代表者メールアドレス</p>
<%= @member.email %>

<p>代表者氏名</p>
<%= @member.last_name + @member.first_name %>


<%= form_with model: @recruit do |f| %>

<%= f.hidden_field :member_id, :value => current_member.id %>
<%= f.hidden_field :title, :value => @recruit.title %>
<%= f.hidden_field :team, :value => @recruit.team %>
<%#= f.hidden_field :area, {value: @recruit.area_i18n} %>
<%= f.hidden_field :area, :value => @recruit.area %>
<%= f.hidden_field :place, :value =>  @recruit.place %>
<%= f.hidden_field :day_and_time, :value => @recruit.day_and_time %>
<%= f.hidden_field :team_level, :value => @recruit.team_level %>
<%= f.hidden_field :post_period, :value => @recruit.post_period %>
<%= f.hidden_field :content, :value => @recruit.content %>


<%= f.submit '募集要項を投稿する' ,class: "btn btn-success" %>

<% end %>