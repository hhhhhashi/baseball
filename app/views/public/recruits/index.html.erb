<h1>募集要項一覧画面</h1>
<%= form_with url: area_path, method: :get do |f| %>
<%= f.select :area, Recruit.areas_i18n.invert, { include_blank: "指定なし" }, class: "mb-3 sm:mb-0 mr-9 border border-line-200 rounded-[3px] rounded-[3px] py-3 pl-6 w-52 h-12 font-bold" %>
<%= f.submit "検索" %>
<% end %>


<% @recruits.each do |recruit| %>
<div>
  <p>画像</p>
  <%= image_tag recruit.get_image %>

  <p>タイトル</p>
  <%= link_to recruit_path(recruit) do %>
  <%= recruit.title %>
  <% end %>

  <p>チーム名</p>
  <%= recruit.team %>

  <p>主な活動エリア</p>
  <%= recruit.area_i18n %>

  <p>場所</p>
  <%= recruit.place %>

  <p>日時</p>
  <%= recruit.day_and_time %>

  <p>掲載期間</p>
  <%= recruit.post_period %>


</div>
<% end %>
