<h1>募集要項編集画面</h1>

<%= form_with model: @recruit , url: recruit_path, method: :patch, local: true do |f| %>

<p>画像</p>
<%= f.file_field :image, accept: "image/*" %>

<p>タイトル【必須】</p>
<%= f.text_field :title %>

<p>チーム名【必須】</p>
<%= f.text_field :team %>

<p>主な活動エリア</p>
<%= f.select :area, Recruit.areas_i18n.invert, { include_blank: "指定なし" }, class: "mb-3 sm:mb-0 mr-9 border border-line-200 rounded-[3px] rounded-[3px] py-3 pl-6 w-52 h-12 font-bold" %>

<P>場所【必須】</P>
<%= f.text_field :place %>

<p>募集日時【必須】</p>
<%= f.date_field :day_and_time %>

<p>チームレベル(1~10段階)【必須】</p>
<%= f.number_field :team_level , max:10, min:0 %>

<p>本文【必須】</p>
<%= f.text_field :content %>

<%= f.submit "編集する", class: "btn btn-succes" %>

<% end %>